{% endcomment %}

{% style %}
  .PAV_Size_instock {
  }
  .PAV_option:not(.PAV_Size_instock) .PAV_image:before {
    content: " ";
    height: 0;
    width: 100%;
    transform: rotate(45deg);
    position: absolute;
    top: calc(50% - 1px);
    left: 0%;
    border-top: 2px solid var(--blo-cream);
  }
  .PAV {
    margin-top: 20px;
    margin-bottom: 20px;
  }
  .PAV_container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 2px;
    margin-left: -2px;
    margin-right: -2px;
  }
  .PAV_option {
    padding: 2px;
    background: transparent;
    border: 2px solid transparent;
    position: relative;
  }
  .PAV_option:hover {
    border: 2px solid rgba(var(--color-foreground), .1);
  }
  .PAV_option.selected {
    border: 2px solid rgba(var(--color-foreground), 1);
  }
  .PAV_option label {
    position: absolute;
    background: rgb(var(--color-foreground));
    color: #fff;
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 130%;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    padding: 6px 10px 9px 10px;
    font-weight: 700;
    border-radius: 6px;
    width: auto;
    white-space: nowrap;
    left: 50%;
    transform: translateX(-50%);
    display: none;
    pointer-events: none;
  }
  .PAV_option label:before {
    content: "";
    position: absolute;
    bottom: -7px;
    border-top: 7px solid rgb(var(--color-foreground));
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    left: calc(50% - 8px);
    width: 6px;
    height: 6px;
  }

  @media screen and (min-width: 750px) {
    .PAV_option:hover label {
      display:block;
    }
  }

  .PAV_option.SoldOut .PAV_image{
    opacity: .4;
  }

  .PAV_option .PAV_image {
    height: 100%;
    width: 100%;
    margin: 0;
    display: block;
    background-repeat: no-repeat;
    background-position: center;
    background-color: rgba(0,0,0,0.1);
  }

  /* Image Styles */
  .PAV_container.PAV_style_image .PAV_option {
    border-radius: 10px;
    width: 50px;
    height: 50px;
  }
  .PAV_container.PAV_style_image .PAV_image {
    border-radius: 5px;
    background-size: 100%;
  }
  .PAV_container.PAV_style_image .PAV_option label {
    bottom: 55px;
  }

  /* Swatch Styles */
  .PAV_container.PAV_style_swatch .PAV_option {
    border-radius: 20px;
    width: 35px;
    height: 35px;
  }
  .PAV_container.PAV_style_swatch .PAV_image {
    border-radius: 20px;
    background-size: 160px;
    background-position-y: {{PAV_swatch_offset_Y}}%;
    background-position-x: {{PAV_swatch_offset_X}}%;
  }
  .PAV_container.PAV_style_swatch .PAV_option label {
    bottom: 40px;
  }
{% endstyle %}
