{% comment %}
  SNIPPET REVIEVES THIS DATA:
  - PAV_target_collection = collection handle
  - PAV_product_handle = current product handle
  - PAV_product_type = current product type
  - PAV_label = text for section title like "Style"
  - PAV_style = can be "swatch" or "image"
  - PAV_hide_sold_out = True or False
{% endcomment %}

{% assign current_variant = product.selected_or_first_available_variant %}

<div class="product-options PAV">
  <label class="form__label">{{ PAV_label }}</label>
  <div class="PAV_container PAV_style_{{PAV_style}}">
    {% paginate collections[PAV_target_collection].products by 100 %}
      {% for product in collections[PAV_target_collection].products %}
        {% for variant in product.variants %}
          {% if variant.title == current_variant.title %}
            {% assign url_variant = variant.id %}
          {% endif %}
        {% endfor %}
        <a
          class="PAV_option {% if product.handle == PAV_product_handle %}selected{% endif %} {% if product.available == false %}SoldOut{% endif %} {% if product.handle != PAV_product_handle and product.available == false and PAV_hide_sold_out == true%}hidden{% endif %} {% for variant in product.variants %}{% if variant.available == true and variant.title == current_variant.title or product.variants.size == 1 %} PAV_Size_instock{% endif %}{% endfor %}"
          href="{{ product.url }}{% if url_variant %}?variant={{ url_variant }}{% endif %}"
        >
          <div
            class="PAV_image"
            style="background-image:url({% if PAV_style == "swatch" %}{{ product.featured_image | image_url: width: 320 }}{% else %}{{ product.featured_image | image_url: width: 100 }}{% endif %});"
            loading="lazy"
          ></div>

          <label> {{ product.title }}</label>
        </a>
      {% endfor %}
    {% endpaginate %}
  </div>
</div>

{% comment %}
