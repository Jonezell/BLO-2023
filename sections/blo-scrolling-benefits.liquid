{%- style -%}
.blo-scrolling-benefits {
    padding: 30px 0;
    display: flex;
    flex-direction: row;
    gap: 20px;
    background: var(--blo-pine, #000);
    overflow: hidden;
}
.blo-scrolling-benefits-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 30px;

    text-size-adjust: 100%; 
    -ms-text-size-adjust: 100%; 
    -moz-text-size-adjust: 100%; 
    -webkit-text-size-adjust: 100%;
}
.blo-scrolling-benefits-block {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
    color: var(--blo-ivory, #fff);
    text-wrap: nowrap;
    font-family: 'GT Alpina Typewriter';
    text-transform: uppercase;
    font-size: 14px;
}
.blo-scrolling-benefits-block img {
    max-width: 22px;
    max-height: 22px;
    height: auto;
    width: auto;
}



/* ANIMATION */
@media (prefers-reduced-motion: reduce) {
  .blo-scrolling-benefits-container {
    animation-play-state: paused !important;
  }
}
.blo-scrolling-benefits:hover .blo-scrolling-benefits-container {
  animation-play-state: paused;
}
.blo-scrolling-benefits-container {
  animation: scroll 30s linear infinite;
}

@keyframes scroll {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(calc(-50%));
  }
}

{%- endstyle -%}





