<div class="blo-africa-container blo-section-{{ section.id }}-padding">
  <div class="blo-africa-media">
    {% if section.settings.image %}
      {{ section.settings.image | image_url: width: 3200 | image_tag: loading: 'lazy' }}
    {% endif %}
  </div>
  <div class="blo-africa-text-container">
    <div class="blo-africa-text {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'badge' -%}
            <div>
              <div
                class="blo-badge inline-richtext {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </div>
            </div>
          {%- when 'heading' -%}
            <h2
              class="blo-banner-title inline-richtext {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </h2>
          {%- when 'text' -%}
            <div
              class="blo-banner-text rte {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
              {{ block.shopify_attributes }}
            >
              <p>{{ block.settings.text }}</p>
            </div>
          {%- when 'table-row' -%}
            <div
              class="blo-africa-row rte {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %} {% if block.settings.is-header == true %} blo-africa-row-header {% endif %}"
              {{ block.shopify_attributes }}
            >
              <div class="blo-africa-row-content">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 10L8.5 13.5L14 6" stroke="#335348" stroke-width="1.9"/>
                </svg>
                <p>{{ block.settings['text-pros'] }}</p>
              </div>
              <div class="blo-africa-row-content">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <line x1="6.67175" y1="6.32825" x2="13.7428" y2="13.3993" stroke="#C27D4C" stroke-width="1.9"/>
                  <line x1="13.6718" y1="6.67175" x2="6.60068" y2="13.7428" stroke="#C27D4C" stroke-width="1.9"/>
                </svg>
                <p>{{ block.settings['text-cons'] }}</p>
              </div>
            </div>
          {%- when 'buttons' -%}
            <div
              class="blo-africa-buttons {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
              {{ block.shopify_attributes }}
            >
              <a
                {% if block.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link }}"
                {% endif %}
                class="button button--secondary"
              >
                {{- block.settings.button_label | escape -}}
              </a>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% style %}
  .blo-africa {
    background: var(--blo-indigo,#98B5CC)
  }
    .blo-africa-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        overflow: hidden;
    }
    .blo-africa-container.blo-image-on-right {
        flex-direction: row-reverse;
    }
    .blo-africa-media {
        width: 50%;
        position: relative;
        font-size: 0;
    }
    .blo-africa-media img,
    .blo-africa-media video {
        border-radius: var(--blo-corner-radius);
        width: 100%;
        height: auto;
    }
    .blo-africa-media.has-secondary{
      padding-right: 120px;
      padding-bottom: 60px;
    }
    .blo-africa-media-primary {
      position: relative;
    }
    .blo-africa-media.has-secondary .blo-africa-media-secondary {
      position: absolute;
      right: 0;
      bottom: 0;
      width: 190px;
    }
    .blo-africa-media-secondary {
      box-shadow: var(--blo-shadow);
    }
    .blo-africa-decoration-top {
      position: absolute;
      top: -102px;
      right: -160px;
    }
    .blo-africa-decoration-bottom {
      position: absolute;
      bottom: -112px;
      left: -140px;
    }
    .blo-africa-text-container {
      display: flex;
      width: 50%;
      justify-content: center;
    }
    .blo-africa-text {
      display: flex;
      flex-direction: column;
      gap:10px;
      max-width: 600px;
    }
    .blo-africa-text .button {
        margin-top: 20px;
        color: {{section.settings.text_color}};
        border-color: {{section.settings.text_color}};
    }
    .blo-africa-text h2,
    .blo-africa-text p {
      margin-bottom: 0px;
      color: {{section.settings.text_color}};
    }
    .blo-africa-row {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
    }
    .blo-banner-text + .blo-africa-row {
        margin-top: 40px;
    }
    .blo-africa-row-content {
        width: 50%;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 5px;
        padding: 12px 0;
        color: var(--blo-pine);
    }
    .blo-africa-row-content svg path {
        stroke: var(--blo-pine);
    }
    .blo-badge {
      display: inline-block;
      box-sizing: border-box;
      padding: 5px 12px 3px;
      border: 1.9px solid var(--blo-terra,#C27D4C);
      border-radius: 20px;
      color: var(--blo-terra,#C27D4C);
      font-size: 14px;
      line-height: 130%;
    }
    @media screen and (min-width: 990px) {
      .blo-africa-container {
          max-height: 1000px;
      }
      .blo-africa-text {

        padding: 50px;
      }
    }


    @media screen and (max-width: 989px) {
      .blo-africa-container {
          flex-direction: column;
      }
      .blo-africa-media {
          width: 100%;
      }
      .blo-africa-text-container {
          width: 100%;
      }
      .blo-africa-text {
        padding: 100px 25px;
      }
  }
{% endstyle %}

{% schema %}
{
  "name": "BLO: Africa",
  "tag": "section",
  "class": "section blo-africa",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    },
    {
      "type": "checkbox",
      "id": "show_decoration",
      "label": "Show Decoration",
      "default": false
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#335348"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "New!",
          "label": "Badge Text"
        }
      ]
    },
    {
      "type": "heading",
      "name": "heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image banner",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-banner.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "Give customers details about the banner image(s) or content on the template.",
          "label": "Text"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "t:sections.image-banner.blocks.buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BLO: Africa"
    }
  ]
}
{% endschema %}
