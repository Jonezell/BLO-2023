{%- style -%}
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      }

      @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }

      #shopify-section-{{section.id}} {
        background-color: {{ section.settings.background_color }};
      }


      /* ---------- CUSTOM - FAQ Section ---------- */
    .blo-faq-section .blo-faq-section_wrapper {
      align-items: start;
    }
    .blo-faq-section .image-with-text__heading {
      margin-bottom:0;
    }
    .blo-faq-section .blo-faq-section_image {
      margin-bottom: 20px;
    }
    @media only screen and (max-width: 749px) {
      .blo-faq-section .blo-faq-section_image {
        text-align: center;
      }
    }
    /* ---------- CUSTOM - IMAGE AND TEXT SECTION ---------- */

  .blo-faq-section_wrapper {
      display: flex;
      align-items: center;
      flex-direction: column;
    }
    .blo-faq-section_image {
      width: 100%;
      margin-bottom: 60px;
    }
    .blo-faq-section_image img {
      width: 100%;
      max-width: 400px;
      margin: auto;
      display: block;
      filter: var(--shadow-4-percent)
    }
    .blo-faq-section_content {
      align-items: center;
      text-align: center;
      width: 100%;
    }
    .blo-faq-section_content .image-with-text__heading {
      margin-bottom: 10px;
      margin-top:0;
    }
    .eyebrow-wrapper + .image-with-text__heading {
      margin-top: 20px;
    }
    .blo-faq-section_content .button {
      margin-top: 30px;
    }
    .blo-faq-section_content .eyebrow-wrapper {
      display: inline-block;
      position: relative;
    }
    .blo-faq-section_content .eyebrow {
      padding: 11px 17px 9px;
      margin: 0;
      z-index: 1;
      position: relative;
    }
    .blo-faq-section_content .eyebrow-wrapper svg {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      filter: var(--shadow-4-percent);
      z-index: 0;
    }
    .blo-image-and-text .accordion__content{
      padding-left: 0;
    }
    .blo-image-and-text .accordion__content p {
        text-align: left;
    }
    @media only screen and (min-width: 750px) {
      .blo-faq-section_wrapper{
        flex-direction: row;
      }
      .blo-faq-section_image {
        margin-bottom: 0;
        margin-right: 10%;
        width: 50%;
      }
      .blo-faq-section_content {
        align-items: left;
        text-align: left;
        width: 50%;
      }
      .blo-faq-section_text_first {
        flex-direction: row-reverse;
      }
      .blo-faq-section_text_first .blo-faq-section_image {
        margin-right: 0;
        margin-left: 10%;
      }
    }
    @media only screen and (max-width: 749px) {
      .blo-faq-section_content .button {
        width: 100%;
      }
    }

    .blo-image-and-text .product__accordion {
      border-top: 2px solid rgba(0,0,0,0.04);
      border-bottom: 2px solid rgba(0,0,0,0.04);
    }
    .blo-image-and-text .product__accordion + .product__accordion {
      border-top: none;
    }
{%- endstyle -%}

<div class="page-width blo-faq-section_wrapper blo-faq-section_{{ section.settings.layout }} section-{{ section.id }}-padding">
  <div class="blo-faq-section_image">
    <h2 class="image-with-text__heading">
      {{ section.settings.mainHeading | escape }}
    </h2>

    <div class="image-with-text__text rte " {{ section.shopify_attributes }}>{{ section.settings.mainText }}</div>
    {%- if section.settings.mainText != blank -%}
    {%- endif -%}
  </div>
  <div id="ImageWithText--{{ section.id }}" class="blo-faq-section_content">
    {%- for block in section.blocks -%}
      {% case block.type %}
        {%- when 'eyebrow' -%}
          <div class="eyebrow-wrapper">
            <p class="eyebrow" {{ block.shopify_attributes }}>{{ block.settings.eyebrow | escape }}</p>
            <svg
              fill="{{ block.settings.eyebrow_color }}"
              width="141"
              height="38"
              preserveAspectRatio="none"
              viewBox="0 0 141 38"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M85.5906 1.00949C62.2383 0.81461 67.6074 1.77529 44.2353 1.77529C39.1323 1.77529 33.4519 1.20793 28.5146 2.31145C26.5439 2.75192 20.7547 2.69893 14.903 2.50235C6.82509 2.23098 0 8.61405 0 16.6966V21.5568C0 29.9106 7.28744 36.3466 15.6408 36.4369C19.0372 36.4736 22.4615 36.6879 25.3092 37.2257C32.8343 38.6467 44.2948 37.1002 52.1522 37.2257C65.751 37.4428 71.9849 36.1071 85.5906 36.0484C93.9731 36.0121 102.586 37.8386 110.931 37.2257C115.881 36.8622 121.993 36.3372 127.412 35.8511C134.975 35.1726 140.569 28.5474 140.028 20.9728L139.634 15.4573C139.107 8.07219 132.922 2.38077 125.519 2.3296C119.127 2.28543 111.987 2.14612 108.011 1.77533C100.786 1.10157 92.8828 1.07035 85.5906 1.00949Z"/>
            </svg>
          </div>
        {%- when 'heading' -%}
          <h2 class="image-with-text__heading" {{ block.shopify_attributes }}>
            {{ block.settings.heading | escape }}
          </h2>
        {%- when 'caption' -%}
          <p class="h4" {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>
        {%- when 'text' -%}
          <div class="image-with-text__text rte " {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
        {%- when 'collapsible_tab' -%}
          <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
            <details id="Details-{{ block.id }}-{{ section.id }}">
              <summary>
                <div class="summary__title">
                  {% render 'icon-accordion', icon: block.settings.icon %}
                  <h2 class="h6 accordion__title">
                    {{ block.settings.heading | default: block.settings.page.title }}
                  </h2>
                </div>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                {{ block.settings.content }}
                {{ block.settings.page.content }}
              </div>
            </details>
          </div>
        {%- when 'button' -%}
          {%- if block.settings.button_label != blank -%}
            <a
              {% if block.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ block.settings.button_link }}"
              {% endif %}
              class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.button_label | escape }}
            </a>
          {%- endif -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>

  {%- if section.settings.texture_top == true -%}
    {% render 'blo-edge-texture', pinDirection: 'top' %}
  {%- endif -%}
  {%- if section.settings.texture_bottom == true -%}
    {% render 'blo-edge-texture', pinDirection: 'bottom' %}
  {%- endif -%}
</div>

