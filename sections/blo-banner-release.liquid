

<div class="page-width"> 
  <div class="blo-banner-container">


    <div class="blo-banner-image-wrapper">

      {% comment %} FIX IMAGE WIDTH {% endcomment %}
      {{
        section.settings.image_main
        | image_url: width: 2900
        | image_tag:
          loading: 'lazy',
          class: 'blo-banner-image-desktop'
      }}
      {{
        section.settings.image_secondary
        | image_url: width: 1000
        | image_tag:
          loading: 'lazy',
          class: 'blo-banner-image-mobile'
      }}
      
    </div>
    

    <div class="blo-banner-card {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'badge' -%}
              <div
                class="inline-richtext {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
              >
                <label class="badge">{{ block.settings.badge }}</label>
              </div>
            {%- when 'heading' -%}
              <h1
                class="blo-banner-title inline-richtext {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </h1>
            {%- when 'text' -%}
              <div class="blo-banner-text rte {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }}>
                <p>{{ block.settings.text }}</p>
              </div>
            {%- when 'buttons' -%}
              <div
                class="blo-banner-buttons {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
                {{ block.shopify_attributes }}
              >
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button button--primary"
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>              
              </div>
          {%- endcase -%}
        {%- endfor -%}
    </div>





  <div>
</div>

{% render 'blo-edge-texture', pinDirection: 'bottom' %}





{%- style -%}

.blo-banner-container {
    padding-bottom: 50px;
}
.blo-banner-image-wrapper {
  display: block;
  width: 100%;
  height: auto;
  position: relative;
}
.blo-banner-image-desktop, 
.blo-banner-image-mobile {
    display: block;
    width: 100%;
    height: auto;
}
.blo-banner-image-desktop {
    display: none;
}
.blo-banner-image-mobile {
    display: block;
}

.blo-banner-card {
    display: flex;
    padding: 30px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    border-radius: 16px;
    background: var(--greyscale-white, #FFF);
    box-shadow: 0px 14px 24px 0px rgba(0, 0, 0, 0.07);
    z-index: 1;
}
.blo-banner-stars-container {
    margin-bottom: 25px;
    display: flex;
    padding: 6px 12px;
    align-items: center;
    gap: 7px;
    border-radius: 40px;
    background: var(--tan-light, #F8F4EE);
    align-items: center;
}
.blo-banner-stars {
    display: flex;
    align-items: flex-start;
    gap: 2px;
    margin-bottom: 2px;
}
.blo-banner-stars-container p {
    margin: 0;
    margin-top: 2px;
}
.blo-banner-title {
    margin-top: 0;
    margin-bottom: 10px;
}
.blo-banner-text {
    margin-top: 0;
    margin-bottom: 0;
}
.blo-banner-buttons {
    display: block;
    margin-top: 25px;
    width: 100%;
}


@media screen and (max-width: 989px) { 
    .blo-banner-image-mobile {
        position: relative;
        z-index: 0;
    }
    .blo-banner-container {
        
    }
    .blo-banner-card {
        margin: -50px 30px 0 30px;
        position: relative;
        z-index: 1;
    }
    .blo-banner .page-width {
        padding-left: 0;
        padding-right: 0;
    }
    .blo-banner-buttons .button {
        width: 100%;
    }
}


@media screen and (min-width: 990px) { 
  .blo-banner-container {
      position: relative;
      padding-top: 50px;
      padding-bottom: 50px;
      padding-right: 50px;
  }
  .blo-banner-card {
      position: absolute;
      bottom: 0px;
      right: 0px;
      width: 550px;
      min-height: calc(100% - 100px);
      padding: 50px;
  }
  .blo-banner-image-mobile {
      display: none;
  }
  .blo-banner-image-desktop {
      display: block;
      border-radius: var(--blo-corner-radius);
  }
  .blo-banner .blo-banner-image-wrapper svg.blo-edge-texture {
    opacity: 0;
  }

}



  
{%- endstyle -%}


{% schema %}
{
  "name": "BLO Banner (Release)",
  "tag": "section",
  "class": "section blo-banner blo-banner-release blo-edge-texture-wrapper",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image_main",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "image_secondary",
      "label": "Secondary Image"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Text Color",
      "default": "#191919"
    },
    {
      "type": "color_background",
      "id": "color_background",
      "label": "Background Color",
      "default": "#EFE8DE"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "badge",
          "default": "New Release!",
          "label": "Badge Text"
        }
      ]
    },
    {
      "type": "heading",
      "name": "t:sections.image-banner.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image banner",
          "label": "t:sections.image-banner.blocks.heading.settings.heading.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-banner.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "Give customers details about the banner image(s) or content on the template.",
          "label": "t:sections.image-banner.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "t:sections.image-banner.blocks.buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_label_1.label",
          "info": "t:sections.image-banner.blocks.buttons.settings.button_label_1.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_link_1.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BLO Banner (Release)",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
