{%- style -%}

.blo-banner-container {
    background: {{ section.settings.background-color }};
}
.blo-banner-image-wrapper {
  display: block;
  height: auto;
  position: relative;
}
.blo-banner-image, 
.blo-banner-image-wrapper video {
    display: block;
    width: 100%;
    height: auto;
}

.blo-banner-card-wrapper {
    position: relative;
}
.blo-banner-shape-top,
.blo-banner-shape-bottom {
    position: absolute;
    width: auto;
}
.blo-banner-shape-top {
    left: 0;
    right: 0;
    top: 0;
}
.blo-banner-shape-bottom {
    left: -92px;
    right: -0;
    bottom: -0;
}

.blo-banner-card {
    display: flex;
    padding: 30px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
    border-radius: 16px;
    background: var(--blo-cream, #FFF);
    box-shadow: 0px 14px 24px 0px rgba(0, 0, 0, 0.07);
    z-index: 1;
}
.blo-banner-stars-container {
    display: flex;
    align-items: center;
    gap: 7px;
    align-items: center;
}
.blo-banner-stars {
    display: flex;
    align-items: flex-start;
    gap: 2px;
    margin-bottom: 2px;
}
.blo-banner-stars svg path {
    fill: var(--blo-pine, #000);
}
.blo-banner-stars-container p {
    margin: 0;
    margin-top: 2px;
    color: var(--blo-pine, #000);
}
.blo-banner-title {
    margin-top: 0;
    margin-bottom: 0px;
    color: var(--blo-pine, #000);
}
.blo-banner-text {
    margin-top: 0;
    margin-bottom: 0;
}
.blo-banner-text p {
    color: var(--blo-pine, #000);
}
.blo-banner-buttons {
    display: block;
    margin-top: 10px;
    width: 100%;
}
.blo-banner-buttons .button {
    color: var(--blo-cream, #fff);
    background: var(--blo-terra, #000);
    border-color: var(--blo-terra, #000);
}

{% if section.settings.show_side-gradient == true %}
    .blo-banner-image-wrapper:after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        width: 40px;
        background: linear-gradient(90deg, rgba(225, 226, 227, 0) 0%, {{ section.settings.background-color }} 100%);
    }
{% endif %}


@media screen and (max-width: 989px) { 
    .blo-banner-image {
        position: relative;
        z-index: 0;
    }
    .blo-banner-container {
        
    }
    .blo-banner-card {
        position: relative;
        z-index: 1;
    }
    .blo-banner .page-width {
        padding-left: 0;
        padding-right: 0;
    }
    .blo-banner-buttons .button {
        width: 100%;
    }
}


@media screen and (min-width: 990px) { 
    .blo-banner-image-wrapper {
        width: 45%;
    }
  .blo-banner-container {
    display: flex;
    flex-direction: row;
  }
  .blo-banner-card-wrapper {
    width: 55%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .blo-banner-card {
      padding: 50px;
      width: 580px;
  }
  .blo-banner .blo-banner-image-wrapper svg.blo-edge-texture {
    opacity: 0;
  }

}



  
{%- endstyle -%}


